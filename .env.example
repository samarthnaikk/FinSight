# FinSight Environment Configuration
# Copy this file to .env and fill in your actual values
# Environment variables are optional - services will use defaults if not provided

# =====================================
# Backend Configuration (Django)
# =====================================

# Django secret key for cryptographic signing
# Generate a new one for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=django-insecure-change-this-in-production

# Django debug mode (True/False)
# Set to False in production
DJANGO_DEBUG=True

# Email configuration for OTP verification
# Leave empty to skip email features
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# JWT token configuration
# Access token lifetime in minutes
JWT_ACCESS_MINUTES=30
# Refresh token lifetime in days
JWT_REFRESH_DAYS=7

# Google OAuth Client ID for Google Sign-In
# Leave empty to disable Google authentication
GOOGLE_CLIENT_ID=

# Field encryption key for sensitive data encryption
# Generate a new one for production: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())'
FIELD_ENCRYPTION_KEY=default-insecure-encryption-key-change-this

# =====================================
# Models Service Configuration (FastAPI)
# =====================================

# Groq API Key for Whisper audio transcription
# Required for audio transcription features
GROQ_API_KEY=

# Backboard API Key for structured output generation
# Required for text processing features
BACKBOARD_API_KEY=

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# =====================================
# Database Configuration (PostgreSQL)
# =====================================

# PostgreSQL database configuration
# These defaults match the docker-compose.yml setup
POSTGRES_DB=finsight_db
POSTGRES_USER=finsight_user
POSTGRES_PASSWORD=finsight_password
POSTGRES_PORT=5432
